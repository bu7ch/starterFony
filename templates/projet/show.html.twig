{% extends 'base.html.twig' %}

{% block title %}Détails du Projet{% endblock %}

{% block body %}
<div class="ui container">
    <h1 class="ui header">Détails du Projet</h1>

    <div class="ui segment">
        <p><strong>Nom :</strong> {{ projet.titre }}</p>
        <p><strong>Description :</strong> {{ projet.description }}</p>
        <p><strong>Montant Objectif :</strong> {{ projet.montantObjectif }}</p>
        <p><strong>Montant actuel :</strong> {{ projet.montantActuel }}</p>
        {# <p><strong>Date de Début :</strong> {{ projet.dateDebut|date('Y-m-d') }}</p>
        <p><strong>Date de Fin :</strong> {{ projet.dateFin|date('Y-m-d') }}</p> #}
    </div>

    <a href="{{ path('projet_index') }}" class="ui button">Retour à la liste</a>
    <a href="{{ path('projet_edit', { id: projet.id }) }}" class="ui yellow button">Modifier</a>
</div>
{% endblock %}
